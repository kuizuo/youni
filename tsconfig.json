{
    "compilerOptions": {
      "module": "CommonJS",
      "declaration": true,
      "strictNullChecks": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2021",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "noImplicitAny": false,
      "incremental": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "paths": {
        "@server/*": [
          "./apps/server/src/*"
        ],
        "@prisma/client": [
          "./prisma/client"
        ]
      },
    },
    "exclude": [
      "dist",
      "tmp"
    ]
  }