{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@server/*": ["../server/src/*"],
      "app/*": ["../../packages/app/*"],
      "@youni/ui/*": ["../../packages/ui/*"]
    },
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
